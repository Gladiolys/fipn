{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank",
      "postTypes": [
        "page",
        "post"
      ]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "settings": {
		"appearanceTools": true,
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "color": {
      "background": true,
      "custom": true,
      "customDuotone": false,
      "customGradient": true,
      "defaultGradients": true,
      "defaultPalette": true,
      "duotone": [
        {
          "colors": [ "#000000", "#ffffff" ],
          "slug": "black-and-white",
          "name": "Black and white"
        }
      ],
      "gradients": [],
      "link": false,
      "palette": [
        {
          "slug": "black",
          "color": "#1d1d1b",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "blue",
          "color": "#3855d4",
          "name": "Blue"
        },
        {
          "slug": "dark-blue",
          "color": "#34338e",
          "name": "Dark Blue"
        },
        {
          "slug": "teal",
          "color": "#00e2d6",
          "name": "Teal"
        },
        {
          "slug": "light-blue",
          "color": "#00a6dc",
          "name": "Light Blue"
        }
      ],
      "text": true
    },
    "custom": {
      "typography": {
        "line-height": {
          "caption": "16px",
          "body": "20px",
          "headline5": "24px",
          "headline4": "28px",
          "headline3": "32px",
          "headline2": "40px",
          "headline1": "46px"
        }
      },
      "spacing": {
        "xxs": "4px",
        "xs": "8px",
        "s": "12px",
        "l": "16px",
        "xl": "24px",
        "xxl": "32px",
        "xxxl": "64px"
      }
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": [ "px", "em", "rem", "vh", "vw", "%" ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "typography": {
      "customFontSize": true,
      "lineHeight": true,
      "dropCap": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "name": "System Font",
          "slug": "system-font"
        },
        {
          "fontFamily": "\"Roboto\", sans-serif",
          "name": "Roboto",
          "slug": "roboto"
        }
      ],
      "fontSizes": [
        {
          "size": "12px",
          "slug": "caption"
        },
        {
          "size": "14px",
          "slug": "body"
        },
        {
          "size": "16px",
          "slug": "headline5"
        },
        {
          "size": "20px",
          "slug": "headline4"
        },
        {
          "size": "24px",
          "slug": "headline3"
        },
        {
          "size": "30px",
          "slug": "headline2"
        },
        {
          "size": "38px",
          "slug": "headline1"
        }
      ]
    },
    "blocks": {}
	},
  "styles": {
    "border": {
      "color": "transparent",
      "radius": "0",
      "style": "solid",
      "width": "0px"
    },
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--black)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontWeight": "300",
          "lineHeight": "var(--wp--custom--typography--line-height--headline-1)",
          "fontSize": "var(--wp--preset--font-size--headline-1)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontWeight": "300",
          "lineHeight": "var(--wp--custom--typography--line-height--headline-2)",
          "fontSize": "var(--wp--preset--font-size--headline-2)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--headline-3)",
          "fontSize": "var(--wp--preset--font-size--headline-3)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--headline-4)",
          "fontSize": "var(--wp--preset--font-size--headline-4)"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--headline-5)",
          "fontSize": "var(--wp--preset--font-size--headline-5)"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontWeight": "400",
          "lineHeight": "var(--wp--custom--typography--line-height--headline-5)",
          "fontSize": "var(--wp--preset--font-size--headline-5)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--light-blue)"
        }
      }
    },
    "spacing": {
      "blockGap": "var(--wp--custom--spacing--xs)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--roboto)",
      "lineHeight": "var(--wp--custom--typography--line-height--body)",
      "fontSize": "var(--wp--preset--font-size--body)",
      "fontWeight": "400",
      "textDecoration": "none",
      "textTransform": "none",
      "fontStyle": "normal",
      "letterSpacing": "normal"
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--body)",
          "fontSize": "var(--wp--preset--font-size--body)"
        }
      },
      "core/separator": {
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--xxxl) !important",
            "bottom": "var(--wp--custom--spacing--xxxl) !important"
          }
        }
      }
    }
  }
}
